<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上限" />

            <EditText
                android:id="@+id/editTextMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="0"
                android:inputType="number"
                android:text="38" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="度" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/maxinc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:text="+"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/maxdec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:text="-"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下限" />

            <EditText
                android:id="@+id/editTextMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="0"
                android:inputType="number"
                android:text="32" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="度" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/mininc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:text="+"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/mindec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:text="-"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="0"
                android:inputType="number"
                android:text="39" />

            <com.example.jack8.floatwindow.FwEditView
                android:id="@+id/editText"
                style="@style/AppTheme.WindiowText"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="0"
                android:gravity="right"
                android:text="2"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textViewTest"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test" />

            <ImageButton
                android:id="@+id/del"
                style="@style/AppTheme.Button"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/arrow"
                android:tag="del"
                android:theme="@style/AppTheme.Button" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_weight="0"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>